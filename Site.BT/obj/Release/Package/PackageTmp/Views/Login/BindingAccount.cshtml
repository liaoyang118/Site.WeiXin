
@{
    ViewBag.Title = "绑定账号";
}
@section css{
    <link href="~/Content/bootstrapValidator.min.css" rel="stylesheet" />

}

@section script{
    <script src="~/Scripts/bootstrapValidator.min.js"></script>

    <!--mvc自带验证-->
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <script type="text/javascript">
        $(function () {
            //设置校验规则
            $('form').bootstrapValidator({
                message: 'This value is not valid',
                feedbackIcons: {
                    valid: 'glyphicon glyphicon-ok',
                    invalid: 'glyphicon glyphicon-remove',
                    validating: 'glyphicon glyphicon-refresh'
                },
                fields: {
                    account: {
                        validators: {
                            notEmpty: {
                                message: '账户不能为空'
                            }
                        }
                    },
                    pwd: {
                        validators: {
                            notEmpty: {
                                message: '密码不能为空'
                            }
                        }
                    }
                }
            });
            
        });
    </script>
}


<div class="form quick-post">
    <!-- Edit profile form (not working)-->
    <form class="form-horizontal" style="margin-top:30px;" enctype="multipart/form-data" id="forms_edit" action="/Login/BindingAccount" method="post">
        <!-- account -->
        <div class="form-group">
            <label class="control-label col-lg-3" for="account">账户</label>
            <div class="col-lg-9">
                <input type="text" name="account" class="form-control" id="account" value="" />
            </div>
        </div>
        <!-- pwd -->
        <div class="form-group">
            <label class="control-label col-lg-3" for="pwd">密码</label>
            <div class="col-lg-9">
                <input type="text" name="pwd" class="form-control" id="pwd" value="" />
            </div>
        </div>
        <div class="form-group">
            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button type="submit" class="btn btn-primary">绑定</button>
                <button type="reset"  class="btn btn-default">重置</button>
            </div>
        </div>
    </form>
    
</div>