
@{
    ViewBag.Title = "微信后台管理系统_文章管理";
    Layout = "~/Views/Shared/_Layout_Index.cshtml";
}
@using Site.WeiXin.DataAccess.Model;
@using Site.Untity;
@{

    IList<Article> list = ViewBag.list;
    string title = ViewBag.title;

    int pageIndex = ViewBag.pageIndex;
    int pageSize = ViewBag.pageSize;
    int rowCount = ViewBag.rowCount;
}

@section css{
    @Styles.Render("~/bundles/css/bootstrap/template")
    <link href="~/Content/bootstrapValidator.min.css" rel="stylesheet" />
}

@section scripts{
    @Scripts.Render("~/bundles/js/bootstrap/template")
    <script src="~/Scripts/bootstrapValidator.min.js"></script>

    <script src="~/UEdit/ueditor.config.js"></script>
    <script src="~/UEdit/ueditor.all.js"></script>
    <script src="~/UEdit/lang/zh-cn/zh-cn.js"></script>

    <script type="text/javascript">
        var currentId = "";
        var parentId = "";
        var editId = "";
        $(function () {

            $('#myModal').on('hidden.bs.modal', function (e) {
                currentId = "";
            })

            $('#editModal').on('hidden.bs.modal', function (e) {
                editId = "";
                $(this).removeData();
            })

            $('#btn_deleteEdit').on('click', function (e) {
                btn_deleteEdit();
            })
        })

        function btn_delete(id, parentId) {
            currentId = id;
            parentId = parentId;
            $("#myModal").modal({
                backdrop: "static"//指定一个静态背景，当用户点击背景处，modal界面不会消失
            })
        }

        function btn_edit(id, parentId) {
            editId = id;
            $("#editModal").modal({
                remote: "/Content/ContentEditView?id=" + id,
                backdrop: "static"//指定一个静态背景，当用户点击背景处，modal界面不会消失
            })
        }

        function btn_deleteEdit() {
            $.ShowLoading("删除中...");
            //验证通过
            $.ajax({
                url: "/Home/Delete",
                type: "post",
                dataType: "json",
                data: {
                    id: currentId,
                    parentId: parentId
                },
                cache: false,
                success: function (json) {
                    $.HideLoading();
                    if (json.success) {
                        $.SuccessInfo(json.message.text, 1000);
                        setTimeout(function () {
                            top.location.href = "/home/menu";
                        }, 1000);
                    }
                    else {
                        $.WarningInfo(json.message.text);
                    }
                },
                error: function (xhr, state, error) {
                    $.HideLoading();

                    $.ErrorInfo(json.message.text);
                }
            });

            $('#myModal').modal('hide')
        }

        function btn_publish() {
            $.ShowLoading("发布中...");
            //验证通过
            $.ajax({
                url: "/Home/PublishButton",
                type: "post",
                dataType: "json",
                data: {},
                cache: false,
                success: function (json) {
                    $.HideLoading();
                    if (json.success) {
                        $.SuccessInfo(json.message.text, 1000);
                    }
                    else {
                        $.WarningInfo(json.message.text);
                    }
                },
                error: function (xhr, state, error) {
                    $.HideLoading();

                    $.ErrorInfo(json.message.text);
                }
            });
        }

    </script>
}

<div class="page-head">
    <h2 class="pull-left"><i class="icon-th-list"></i> 文章管理 </h2>
    <!-- Breadcrumb -->
    <div class="bread-crumb pull-right">
        <a href="/"><i class="icon-home"></i> 首页 </a>
        <!-- Divider -->
        <span class="divider">/</span>
        <a href="#" class="bread-current">文章管理</a>
    </div>
    <div class="clearfix"></div>
</div>

<div class="matter">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="widget">
                    <div class="widget-head">
                        <div class="pull-left">文章列表</div>
                        <div class="widget-icons pull-right">
                            <button class="btn btn-sm btn-success" onclick="btn_edit('','');"><i class="icon-plus"></i>新增</button>

                            <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
                            <a href="#" class="wclose"><i class="icon-remove"></i></a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="widget-content referrer">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>编号</th>
                                    <th>标题</th>
                                    <th>简介</th>
                                    <th>作者</th>
                                    <th>创建时间</th>
                                    <th>创建用户</th>
                                    <th>状态</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (list != null && list.Count > 0)
                                    {
                                        int num = 1;
                                        foreach (Article item in list)
                                        {
                                            <tr>
                                                <td>@num</td>
                                                <td>@item.Title</td>
                                                <td>@item.Intro</td>
                                                <td>@item.AuthorName</td>
                                                <td>@item.CreateTime.ToString("yyyy/MM/dd HH:mm:ss")</td>
                                                <td>@item.CreateUserAccount</td>
                                                <td>
                                                    @{
                                                        if ((int)SiteEnum.ArticleState.通过 == item.Statu)
                                                        {
                                                            <span class="label label-success">通过</span>
                                                        }
                                                        else if ((int)SiteEnum.ArticleState.不通过 == item.Statu)
                                                        {
                                                            <span class="label label-danger">不通过</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="label label-warning">无效</span>
                                                        }
                                                    }
                                                </td>
                                                <td>

                                                    <button class="btn btn-xs btn-success" onclick="btn_edit('','@item.Id');"><i class="icon-plus"></i></button>
                                                    <button class="btn btn-xs btn-warning" onclick="btn_edit(@item.Id,'');"><i class="icon-pencil"></i></button>
                                                    <!-- data-toggle="modal" data-target="#myModal" 自动绑定，使用这些属性 -->
                                                    <button class="btn btn-xs btn-danger" onclick="btn_delete('@item.Id','')"><i class="icon-remove"></i></button>
                                                </td>
                                            </tr>
                                            num++;
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="8">暂无任何数据</td></tr>
                                    }
                                }
                            </tbody>
                        </table>

                        <div class="widget-foot">
                            @Html.Raw(UntityTool.CreateListPage(pageSize, pageIndex, rowCount, string.Format("/Home/UserList/{0}", title == "" ? "" : string.Format("?title={0}", HttpUtility.UrlEncode(title)))))
                            <div class="clearfix"></div>
                        </div>

                    </div>

                    <!-- confirm 模态框（Modal） -->
                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                        &times;
                                    </button>
                                    <h4 class="modal-title" id="myModalLabel">
                                        删除
                                    </h4>
                                </div>
                                <div class="modal-body">
                                    如果删除父菜单将一起删除下面的子菜单,确定要删除该菜单吗？
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">
                                        取消
                                    </button>
                                    <button type="button" id="btn_deleteEdit" class="btn btn-primary">
                                        确定
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 编辑 模态框（Modal） -->
                    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">

                    </div>

                </div>
            </div>
        </div>

    </div>
</div>
