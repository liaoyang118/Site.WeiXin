@using Site.WeiXin.DataAccess.Model;
@using Site.Untity;
@{

    IList<UserGroup> list = ViewBag.list;

    int pageIndex = ViewBag.pageIndex;
    int pageSize = ViewBag.pageSize;
    int rowCount = ViewBag.rowCount;
}

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>编号</th>
            <th>标签名称</th>
            <th>标签ID</th>
            <th class="hidden-xs">创建时间</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (list != null && list.Count > 0)
            {
                int num = 1;
                foreach (UserGroup item in list)
                {
                    <tr>
                        <td>@num</td>
                        <td>@item.TagName</td>
                        <td>@item.TagId</td>
                        <td class="hidden-xs">@item.CreateTime.ToString("yyyy/MM/dd HH:mm:ss")</td>
                        <td><button class="btn btn-xs btn-danger" onclick="btn_DeleteUseGroup('@item.OpenId','@item.TagId','@item.Id');"><i class="icon-remove"></i></button></td>
                    </tr>
                    num++;
                }
            }
            else
            {
                <tr><td colspan="5">暂无任何数据</td></tr>
            }
        }
    </tbody>
</table>
<div id="pageBar" class="widget-foot">

    <div class="clearfix"></div>
</div>

