
@{
    ViewBag.Title = "微信后台管理系统_关注用户";
    Layout = "~/Views/Shared/_Layout_Index.cshtml";
}
@using Site.WeiXin.DataAccess.Model;
@using Site.Untity;
@{

    IList<User> list = ViewBag.list;
    string nickName = ViewBag.nickName;

    int pageIndex = ViewBag.pageIndex;
    int pageSize = ViewBag.pageSize;
    int rowCount = ViewBag.rowCount;
}

@section css{
    @Styles.Render("~/bundles/css/bootstrap/template")
    <link href="~/Content/bootstrapValidator.min.css" rel="stylesheet" />
}

@section scripts{
    @Scripts.Render("~/bundles/js/bootstrap/template")
    <script src="~/Scripts/bootstrapValidator.min.js"></script>

    <script type="text/javascript">
        var currentId = "";
        var parentId = "";
        var editId = "";
        $(function () {

            $('#myModal').on('hidden.bs.modal', function (e) {
                currentId = "";
            })

            $('#editModal').on('hidden.bs.modal', function (e) {
                editId = "";
                $(this).removeData();
            })

            $('#btn_deleteEdit').on('click', function (e) {
                btn_deleteEdit();
            })
        })

        function btn_delete(id, parentId) {
            currentId = id;
            parentId = parentId;
            $("#myModal").modal({
                backdrop: "static"//指定一个静态背景，当用户点击背景处，modal界面不会消失
            })
        }

        function btn_edit(id, parentId) {
            editId = id;
            $("#editModal").modal({
                remote: "/Home/MenuEditView?id=" + id + "&parentId=" + parentId,
                backdrop: "static"//指定一个静态背景，当用户点击背景处，modal界面不会消失
            })
        }

        function btn_deleteEdit() {
            $.ShowLoading("删除中...");
            //验证通过
            $.ajax({
                url: "/Home/Delete",
                type: "post",
                dataType: "json",
                data: {
                    id: currentId,
                    parentId: parentId
                },
                cache: false,
                success: function (json) {
                    $.HideLoading();
                    if (json.success) {
                        $.SuccessInfo(json.message.text, 1000);
                        setTimeout(function () {
                            top.location.href = "/home/menu";
                        }, 1000);
                    }
                    else {
                        $.WarningInfo(json.message.text);
                    }
                },
                error: function (xhr, state, error) {
                    $.HideLoading();

                    $.ErrorInfo(json.message.text);
                }
            });

            $('#myModal').modal('hide')
        }

        function btn_publish() {
            $.ShowLoading("发布中...");
            //验证通过
            $.ajax({
                url: "/Home/PublishButton",
                type: "post",
                dataType: "json",
                data: {},
                cache: false,
                success: function (json) {
                    $.HideLoading();
                    if (json.success) {
                        $.SuccessInfo(json.message.text, 1000);
                    }
                    else {
                        $.WarningInfo(json.message.text);
                    }
                },
                error: function (xhr, state, error) {
                    $.HideLoading();

                    $.ErrorInfo(json.message.text);
                }
            });
        }

        function btn_search() {
            var _key = $("#title").val();
            top.location.href = "/Home/UserList?key=" + _key;
        }

    </script>
}

<div class="page-head">
    <h2 class="pull-left"><i class="icon-th-list"></i> 关注用户 </h2>
    <!-- Breadcrumb -->
    <div class="bread-crumb pull-right">
        <a href="index.html"><i class="icon-home"></i> 首页 </a>
        <!-- Divider -->
        <span class="divider">/</span>
        <a href="#" class="bread-current">关注用户</a>
    </div>
    <div class="clearfix"></div>
</div>

<div class="matter">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="widget">
                    <div class="widget-head">
                        <div class="pull-left form-inline">
                            <div class="form-group">
                                <input type="text" class="form-control" id="title" value="@nickName" placeholder="请输入昵称">
                            </div>
                            <div class="form-group">
                                <button class="btn btn-sm btn-default" onclick="btn_search()"><i class="icon-search"></i> 搜索</button>
                            </div>
                        </div>
                        <div class="widget-icons pull-right">
                            <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
                            <a href="#" class="wclose"><i class="icon-remove"></i></a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="widget-content referrer">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>编号</th>
                                    <th style="text-align:center;">头像</th>
                                    <th>昵称</th>
                                    <th>性别</th>
                                    <th>国家</th>
                                    <th>城市</th>
                                    <th>省份</th>
                                    <th>是否关注</th>
                                    <th>关注/取关时间</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (list != null && list.Count > 0)
                                    {
                                        int num = 1;
                                        foreach (User item in list)
                                        {
                                        <tr>
                                            <td>@num</td>
                                            <td>
                                                <img src="@item.HeadImg" alt="">
                                            </td>
                                            <td>@item.NickName</td>
                                            <td>@(item.Sex == 1 ? "男" : (item.Sex == 2 ? "女" : "未知"))</td>
                                            <td>@item.Country</td>
                                            <td>@item.City</td>
                                            <td>@item.Province</td>
                                            <td>@(item.IsSubscribe == true ? "是" : "否")</td>
                                            <td>@(item.IsSubscribe == true ? item.Subscribe_Time.Value.ToString("yyyy/MM/dd HH:mm:ss") : item.UnSubscribe_Time.Value.ToString("yyyy/MM/dd HH:mm:ss"))</td>
                                        </tr>
                                            num++;
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="9">暂无任何数据</td></tr>
                                    }
                                }
                            </tbody>
                        </table>

                        <div class="widget-foot">
                            @Html.Raw(UntityTool.CreateListPage(pageSize, pageIndex, rowCount, string.Format("/Home/UserList/{0}", nickName == "" ? "" : string.Format("?nickName={0}", HttpUtility.UrlEncode(nickName)))))
                            <div class="clearfix"></div>
                        </div>

                    </div>

                    <!-- confirm 模态框（Modal） -->
                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                        &times;
                                    </button>
                                    <h4 class="modal-title" id="myModalLabel">
                                        删除
                                    </h4>
                                </div>
                                <div class="modal-body">
                                    如果删除父菜单将一起删除下面的子菜单,确定要删除该菜单吗？
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">
                                        取消
                                    </button>
                                    <button type="button" id="btn_deleteEdit" class="btn btn-primary">
                                        确定
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 编辑 模态框（Modal） -->
                    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">

                    </div>

                </div>
            </div>
        </div>

    </div>
</div>
